# --------------------------------------------------------------
# LIMPS unified .env file – can be consumed by Docker, VS Code,
# python‑dotenv, Julia's DotEnv, etc.
# --------------------------------------------------------------
LIMPS_HOME=/full/path/to/your/repo
LIMPS_JULIA_PATH=${LIMPS_HOME}/limps_core/julia
LIMPS_PYTHON_PATH=${LIMPS_HOME}/limps_core/python

JULIA_PROJECT=${LIMPS_JULIA_PATH}
JULIA_LOAD_PATH=${LIMPS_JULIA_PATH} # optional extra paths can be appended

PYTHONPATH=${LIMPS_HOME}

CUDA_VISIBLE_DEVICES=0
USE_GPU=1

LIMPS_API_HOST=localhost
LIMPS_API_PORT=8000

POSTGRES_DSN=postgresql://user:pass@localhost/limps_db
REDIS_URL=redis://localhost:6379/0

PROMETHEUS_PORT=9090
GRAFANA_PORT=3000